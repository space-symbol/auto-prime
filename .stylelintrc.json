{ 
    "extends": ["stylelint-config-standard"],
    "rules": {
        "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
        "at-rule-no-unknown": [
            true,
            {
              "ignoreAtRules": [
                "tailwind",
                "apply",
                "variants",
                "responsive",
                "screen"
              ]
            }
          ],
        "no-descending-specificity": null
    }
}